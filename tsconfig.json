{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@/src/*": ["./src/*"],
      "@/test/*": ["./test/*"]
    }
  },
  "exclude": ["node_modules", "dist", "lib", "jest.config.js"],
  "include": ["src", "test"]
}
